<script>
$(document).ready(function(){

  function getQueryStringAsObject() {
     var search = location.search.substring(1);
     return search ? JSON.parse('{"' + decodeURI(search).replace(/"/g, '\\"').replace(/&/g, '","').replace(/=/g,'":"') + '"}') : {};
  }

  var query = getQueryStringAsObject();
 
  
  var email_attribute = query.klaviyo_user ? ('klaviyo_user=' + query.klaviyo_user) : '';
  var coupon_attribute = query.utm_coupon ? ('utm_coupon=' + query.utm_coupon) : '';
  var source = query.utm_source ? ('utm_source=' + query.utm_source) : '';
  var content = query.utm_content ? ('utm_content=' + query.utm_content) : '';
  var medium = query.utm_medium ? ('utm_medium=' + query.utm_medium) : '';
  var campaign = query.utm_campaign ? ('utm_campaign=' + query.utm_campaign) : '';

  var url_params = [
      email_attribute,
      coupon_attribute,
      campaign,
      source,
      content, 
      medium
 ];

 var url = url_params.filter(val => val).join('&');
  
  
  
  console.log(url);
  
  
  $(".select_btn").on('click', function(event) {
    
    
  	
    event.preventDefault();
  	console.log(this.id)
    
    
    window.location = ("/products/"+ this.id + "?" + url)
    
  });
  
  
  
  
  $("a").on('click', function(event) {
    if (this.hash !== "") {
      event.preventDefault();

      var hash = this.hash;

      $('html, body').animate({
        scrollTop: $(hash).offset().top
      }, 500);
    }
  });
  
});
</script>