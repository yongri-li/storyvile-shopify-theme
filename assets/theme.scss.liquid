    background-size: 100%;
    background-repeat: no-repeat;

    width: 19px;
    height: 15px;

    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, calc(-50% - 1px));

    @include desktop {
      transform: translateY(calc(-50% - 1px));
      left: 0;
    }

  }

  cursor: pointer;
  pointer-events: none;

  &.fulfilled {
