.builder-product-offering__starting-compare-at-price {
  color: #aaa;
  text-decoration: line-through;
  font-weight: $builder-title-weight - 100;
}


.builder-product-offering__starting-price {
  color: #db8b44;
  font-weight: $builder-title-weight;
}


.builder-product-offering__price-unit {
  color: #db8b44;
  font-size: 18px;
}


.builder-product-offering__subtitle {
  text-transform: uppercase;
  font-weight: $builder-title-weight;
  color: #db8b44 !important;
  line-height: 150%;

  font-size: 14px;
  margin-bottom: 15px;


  @include desktop {
    text-align: left;
    font-size: 15px;
    margin-bottom: 25px;
  }
}


.builder-product-offering__content {
  margin-bottom: 30px;


  @include mobile {
    margin-top: 40px;
  }

}


.builder-product-offering__features-title {
  margin: 0;
  font-size: 17px;
  font-weight: $builder-title-weight;
  line-height: 180%;
  color: $builder-body-text-color;
}


.builder-product-offering__features {
  margin: 0; padding: 0;
  font-size: 17px;
  line-height: 180%;
  font-weight: normal;
  padding-left: 18px;
  color: $builder-body-text-color;
}


.builder-product-offering__feature {
  display: list-item;
  padding: 0;
}


.builder-product-offering__options {
  margin: 0 -4px;
  @include display-flexbox;
  @include align-items(stretch);

  @include mobile {
    @include justify-content(center);
  }

}


.builder-product-offering__option {
  @include flex-basis(100%);
  @include display-flexbox;
  @include flex-direction(column);
  @include align-items(center);
  @include justify-content(center);

  max-width: 124px;
  text-align: center;
  padding: 8px 14px;
  margin: 0px 4px;
  position: relative;
  opacity: 0.35;
  transition: opacity 0.3s ease;

  cursor: pointer;

  & > * {
    pointer-events: none;
  }

  &.selected, &:hover {
    background-color: #f5f4f0;
    opacity: 1;
  }

  &:before {
    background-image: url({{ 'icon--badge.svg' | asset_url }});
    background-size: contain;
    background-repeat: no-repeat;
    display: none;
    $size: 30px;
    width: $size;
    height: $size;
    content: "";
    position: absolute;
    top: $size*(-13/50);
    right: $size*(-10/50);
  }

  &.selected:before {
    display: inline-block;
  }
}


.builder-product-offering__option-image {

  max-width: 52px;
  width: 60%;
  margin-top: -2px;
  margin-bottom: -2px;

  @include desktop {
    width: 50%;
    margin-top: -6px;
    margin-bottom: -2px;
  }
}


.builder-product-offering__option-text {
  text-transform: uppercase;
  display: block;
  text-align: center;
  font-size: 12px;
  font-weight: 600;

  @include desktop {
    font-size: 15px;
    font-weight: bold;
  }
}




/**
 * Banner Component
 */


$component-banner-font: $accentFontStack;
$component-banner-bold-weight: 600;

.component-banner {
  position: relative;

  @include desktop {
    height: 708px;
  }
}


.component-banner__background {
  width: 100%;
  border: 0;
  line-height: 0;

  height: (202/360) * 100vw;

  @include desktop {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;

    height: 100%;

    object-position: bottom left;
    object-fit: cover;
  }
}


.component-banner__text {

  padding: 0 5%;
  @include mobile {
    margin: 25px 5% 35px 5%;
  }

  @include desktop {
    position: relative;
    z-index: 1;

    @include display-flexbox;
    @include align-items(left);
    @include justify-content(center);
    @include flex-direction(column);

    padding-left: 10%;
    width: 50%;
    height: 100%;
  }

}


.component-banner__text--left {
}


.component-banner__text--right {
  @include desktop {
    width: 40%;
    margin-left: 60%;
  }
}


.component-banner__title {
  font-size: 40px;
  font-weight: $component-banner-bold-weight;
  margin: 0px;
  font-family: $component-banner-font;
  line-height: 1.1;

  @include mobile {
    color: #000 !important;
  }

  @include desktop {
    color: #fff !important;

    .component-banner__text--dark & {
      color: #000 !important;
    }
  }

}


.component-banner__description {
  font-size: 17px;
  line-height: 185%;
  letter-spacing: 0.03em;
  font-family: $component-banner-font;

  @include mobile {
    color: #000;
  }

  @include desktop {
    color: #fff;

    .component-banner__text--dark & {
      color: #000;
    }
  }
}



/**
 * Reviews component
 */

$component-review-font: $accentFontStack;

.component-review {

  @include mobile {
    padding: 0 5%;
    margin: 60px 5%;
  }

  @include desktop {
    margin: 50px 0;
  }
}


.component-review__content {

  font-family: $component-review-font;

  @include desktop {
    width: 40%;
    text-align: center;
    margin: 0 auto;
  }
}


.component-review__stars {
  width: 150px;
  margin: 0 auto;

  svg polygon {
    fill: #CCC;
  }

  @for $i from 1 through 5 {
    &.component-review__stars--score-#{$i} {
      @for $star-index from 1 through $i {
        svg polygon:nth-child(#{$star-index}) {
          fill: #E18B3D;
        }
      }
    }
  }
}


.component-review__quote,
.component-review__author {
  font-size: 25px;
  line-height: 185%;
  letter-spacing: 0.03em;
}


.component-review__quote {
  & > :first-child {
    margin-top: 0px;
  }
}


