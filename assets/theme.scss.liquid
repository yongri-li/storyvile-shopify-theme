.builder__nav-step {
  display: inline-block;
  padding: 15px 15px 15px 35px;
  margin: 0;

  font-weight: 500;
  font-size: 15px;
  letter-spacing: 0.08em;
  text-transform: uppercase;

  color: #aaa;

  position: relative;

  .step-number {
    position: absolute;

    top: 50%; left: 50%;
    transform: translate(-50%, calc(-50% - 1px));

    @include desktop {
      transform: translateY(calc(-50% - 1px));
      left: 0;
    }

    display: inline-block;

    border: 1px solid #aaa;
    border-radius: 100%;

    font-weight: 500;

    height: 24px;
    width: 24px;

    text-align: center;
  }

